server {
    listen {{CAKE_NGINX_LISTEN}};
    server_name www.{{CAKE_NGINX_SERVER_NAME}};
    rewrite ^(.*) http://{{CAKE_NGINX_SERVER_NAME}}$1 permanent;
}

server {
    listen {{CAKE_NGINX_LISTEN}};
    server_name {{CAKE_NGINX_SERVER_NAME}};

    # root directive should be global
    root   /srv/www/webroot/;
    index  index.php;

    location / {
        try_files $uri $uri/ /index.php?$args;
    }

    location ~ \.php$ {
        try_files $uri =404;
        include /etc/nginx/fastcgi_params;
        fastcgi_pass    unix:/var/run/php5-fpm-cake.sock;
        fastcgi_index   index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
    }
}